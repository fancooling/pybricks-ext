{
  "manifest_version": 3,
  "name": "Pybricks Files Manager",
  "version": "1.0",
  "description": "Chrome extension to simplify file saving and loading for Pybricks.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [],

  "content_scripts": [
    {
      "matches": ["*://code.pybricks.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "images/*.svg" ],
      "matches": [ "*://code.pybricks.com/*" ]
    }
  ]
}